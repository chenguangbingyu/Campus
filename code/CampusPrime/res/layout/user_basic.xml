<?xml version="1.0" encoding="utf-8"?>
<com.campus.prime.ui.view.DetectRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/form_horizontal_padding"
      		android:paddingRight="@dimen/form_horizontal_padding"
   		    android:paddingTop="@dimen/form_vertical_padding"
    	    android:paddingBottom="@dimen/form_vertical_padding"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/user_avater"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginLeft="4.0dip"     
                    android:layout_centerVertical="true"            
                    android:src="@drawable/ic_avactar"
                    >                 
                </ImageView>

                <com.campus.prime.ui.view.ThemeTextView
                    android:id="@+id/user_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/user_avater"
                    android:text="会飞的猪" 
                    android:textSize="30dip"/>

         
                
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.campus.prime.ui.view.Header
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8.0dip"
	           		android:paddingRight="12.0dip"
                    android:layout_marginLeft="4.0dip"
	        		android:layout_marginRight="4.0dip"
	        		android:text="Person"
	        		android:textSize="20dip"
	           		style="@style/Header" 
	           		/>        
	           		
                 	
                 <com.campus.prime.ui.view.LabelTextView
                     android:id="@+id/user_realname"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:hint="user_name"
                     style="@style/label_text1"
                     />

                 <com.campus.prime.ui.view.LabelTextView
                     android:id="@+id/user_lovestate"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:hint="love"
                     style="@style/label_text1"
                     />                 

                 <com.campus.prime.ui.view.LabelTextView
                     android:id="@+id/user_description"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
                     android:gravity="left"
                     style="@style/label_text1"
                     />
                     
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.campus.prime.ui.view.Header
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="12dip"
                    android:layout_marginLeft="4.0dip"
                    android:layout_marginRight="4.0dip"
                    android:text="Education"
                    android:textSize="20dip"
                    style="@style/Header"
                    />                   
                <com.campus.prime.ui.view.LabelTextView
                    android:id="@+id/user_school"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="School"
                    style="@style/label_text1"
                    >                    
                </com.campus.prime.ui.view.LabelTextView>
                <com.campus.prime.ui.view.LabelTextView
                    android:id="@+id/user_academy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Academy"
                    style="@style/label_text1"
                    >                    
                </com.campus.prime.ui.view.LabelTextView>
                <com.campus.prime.ui.view.LabelTextView
                    
                    
                    android:id="@+id/user_grade"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Grade"
                    style="@style/label_text1"
                    />                    
                
            </LinearLayout>
                
        </LinearLayout>
    </ScrollView>
    

</com.campus.prime.ui.view.DetectRelativeLayout>