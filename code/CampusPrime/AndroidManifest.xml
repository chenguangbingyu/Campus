<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campus.prime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="andorid.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.campus.prime.ui.home.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Campus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.campus.prime.ui.CreateMessageActivity"
            android:label="@string/title_activity_create_message"
            android:theme="@style/Theme.Campus" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.campus.prime.ui.HomeActivity" />
        </activity>
        <activity
            android:name="com.campus.prime.ui.user.UserActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.campus.prime.ui.group.GroupActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.campus.prime.ui.MessageDetailActivity"
            android:label="@string/title_activity_message_detail"
            android:theme="@style/Theme.Campus" >
        </activity>
        <activity
            android:name="com.campus.prime.ui.home.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.campus.prime.ui.home.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
